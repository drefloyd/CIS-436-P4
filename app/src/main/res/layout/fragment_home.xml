<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <Button
        android:id="@+id/btnUpperBody"
        android:layout_width="172dp"
        android:layout_height="48dp"
        android:layout_marginTop="236dp"
        android:layout_marginBottom="104dp"
        android:text="@string/UpperBody"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/btnCardio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.891"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tvHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="178dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="196dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="@string/home"
        android:textSize="34sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvChooseWorkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="137dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="137dp"
        android:text="@string/choose_your_workout"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvHome" />

    <Button
        android:id="@+id/btnCardio"
        android:layout_width="172dp"
        android:layout_height="48dp"
        android:layout_marginStart="73dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="124dp"
        android:text="@string/Cardio"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/btnLowerBody"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toEndOf="@+id/ivRun" />

    <Button
        android:id="@+id/btnLowerBody"
        android:layout_width="172dp"
        android:layout_height="48dp"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="51dp"
        android:layout_marginBottom="121dp"
        android:text="@string/LowerBody"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivLegs" />

    <ImageView
        android:id="@+id/ivArm"
        android:layout_width="102dp"
        android:layout_height="131dp"
        android:layout_marginStart="46dp"
        android:layout_marginBottom="35dp"
        android:src="@drawable/arm"
        app:layout_constraintBottom_toTopOf="@+id/ivRun"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/ivRun"
        android:layout_width="102dp"
        android:layout_height="131dp"
        android:layout_marginStart="46dp"
        android:layout_marginBottom="43dp"
        android:src="@drawable/running"
        app:layout_constraintBottom_toTopOf="@+id/ivLegs"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/ivLegs"
        android:layout_width="102dp"
        android:layout_height="131dp"
        android:layout_marginStart="46dp"
        android:layout_marginBottom="77dp"
        android:src="@drawable/legs"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>